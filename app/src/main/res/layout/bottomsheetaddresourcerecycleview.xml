<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottomSheet1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:padding="15dp"
    android:background="@color/lightbrown"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="bottom_sheet_behavior">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="25dp">

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="25dp"
            android:layout_height="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@color/black" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/entername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textColor="@color/white"
        android:fontFamily="@font/glgregular"
        android:textSize="22dp"
        android:background="@android:color/transparent"
        android:text="Enter name - English"/>

    <EditText
        android:id="@+id/ed_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="0dp"
        android:textColor="@color/brown"
        android:fontFamily="@font/glgregular"
        android:textSize="20dp"
        android:background="@android:color/transparent"
        android:hint="Please Enter Resource Name"/>

    <TextView
        android:id="@+id/enternamesp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:textColor="@color/white"
        android:fontFamily="@font/glgregular"
        android:textSize="22dp"
        android:background="@android:color/transparent"
        android:text="Introduce nombre - español"/>

    <EditText
        android:id="@+id/ed_usernamesp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="0dp"
        android:textColor="@color/brown"
        android:fontFamily="@font/glgregular"
        android:textSize="20dp"
        android:background="@android:color/transparent"
        android:hint="Ingrese su nombre"/>


    <TextView
        android:id="@+id/descriptioneng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:fontFamily="@font/glgregular"
        android:textSize="22dp"
        android:background="@android:color/transparent"
        android:text="Resource Description/Instructions"/>

    <EditText
        android:id="@+id/descriptionengtxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="0dp"
        android:textColor="@color/brown"
        android:fontFamily="@font/glgregular"
        android:textSize="20dp"
        android:background="@android:color/transparent"
        android:hint="Please Enter Resource description"/>

    <TextView
        android:id="@+id/descriptionsp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:textColor="@color/white"
        android:fontFamily="@font/glgregular"
        android:textSize="22dp"
        android:background="@android:color/transparent"
        android:text="recurso Descripción/Instrucciones"/>

    <EditText
        android:id="@+id/descriptionsptext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="0dp"
        android:textColor="@color/brown"
        android:fontFamily="@font/glgregular"
        android:textSize="20dp"
        android:background="@android:color/transparent"
        android:hint="Por favor ingrese la descripción"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/rectbrown"
        android:fontFamily="@font/glgregular"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="Add Icon for Resource" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:textColor="@color/white"
            android:fontFamily="@font/glgregular"
            android:textSize="20dp"
            android:background="@android:color/transparent"
            android:text="Cancel"/>

        <Button
            android:id="@+id/btn_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/glgregular"
            android:textSize="20dp"
            android:layout_marginEnd="10dp"
            android:background="@android:color/transparent"
            android:text="Delete"/>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/glgregular"
            android:textSize="20dp"
            android:background="@android:color/transparent"
            android:text="Save"/>
    </LinearLayout>

</LinearLayout>